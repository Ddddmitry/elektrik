{% extends 'layout.twig' %}

{% block notification %}
    <div class="notification js-notification">
        <div class="notification-inner typicalBlock typicalBlock_two">
            <div class="notification__text">
                {% include './includes/icon.twig' with {icon: {name: 'notification', class: ''}} %}
                <div class="notification__text-inner">
                    Пройдите сертификацию Электрик.ру, чтобы появиться
                    в каталоге специалистов и иметь возможность публиковать статьи
                </div>
            </div>
            <div class="notification__button">
                <a href="#make_sertificate_electric" data-fancybox="" data-src="#make_sertificate_electric" class="button button_white button_md">
                    Пройти сертификацию
                </a>
            </div>
            <div class="notification__close js-notification-close">
                <a href="#" class="notification__close-inner">
                    <span class="notification__close-inner-line"></span>
                    <span class="notification__close-inner-line"></span>
                </a>
            </div>
        </div>
    </div>
{% endblock %} {#notification#}

{% block search %}
    {% set search = {
        code: 'search',
        action: '?layout=marketplace',
        items: [{
            title: 'Услуга и специалист',
            name: 'servise_person',
            type: 'select',
            items: [{
                value: '1',
                title: 'Установка проводки',
            },{
                value: '2',
                title: 'Ремонт проводки на заводе'
            },{
                value: '3',
                title: 'Установка счётчиков'
            }]
        },{
            title: 'Метро район или город',
            name: 'place',
            type: 'select',
            items: [{
                value: '1',
                title: 'Алабинская'
            },{
                value: '2',
                title: 'Победа'
            },{
                value: '3',
                title: 'Безымянка'
            }]
        },{
            title: 'Поиск',
            name: 'submit',
            type: 'submit',
        }]
    } %}
    {% include './includes/search.twig' with {data: {
        title: 'Каталог специалистов',
        show_filter: true,
        banner: {
            src: '/local/templates/.default/img/trash/banner2.jpg',
            name: 'Баннер2',
            size: {
                width: 1440,
                height: 400
            }
        },
        search: search,
    }} %}
{% endblock %} {#search#}
{% block main %}
    {% block breadcrumbs %}
    {% endblock %} {#breadcrumbs#}
    {% block marketplace %}
        <div class="marketplace">
            <div class="marketplace-inner typicalBlock typicalBlock_two">
                <h1 class="marketplace__title">
                    Все специалисты
                </h1>

                <div class="marketSort">
                    <div class="marketSort-inner">
                        <div class="marketSort__title">
                            Сортировка:
                        </div>
                        <div class="marketSort-list">
                            <div class="marketSort-list__single selected asc">
                                <a href="#" class="marketSort-list__single-inner">
                                    Рекомендуемые<div class="marketSort-list__single-inner-arrow">
                                        <div class="marketSort-list__single-inner-arrow-inner"></div>
                                    </div>
                                </a>
                            </div>
                            <div class="marketSort-list__single">
                                <a href="#" class="marketSort-list__single-inner">
                                    По цене<div class="marketSort-list__single-inner-arrow">
                                        <div class="marketSort-list__single-inner-arrow-inner"></div>
                                    </div>
                                </a>
                            </div>
                            <div class="marketSort-list__single">
                                <a href="#" class="marketSort-list__single-inner">
                                    По рейтингу<div class="marketSort-list__single-inner-arrow">
                                        <div class="marketSort-list__single-inner-arrow-inner"></div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="marketSort marketSort_mobile">
                    <div class="marketSort-inner">
                        <div class="search__filter-single">
                            <select name="marketplace-sort" id="marketplace-sort" data-placeholder="Сортировка" class="js-chosen">
                                <option value=""></option>
                                <option value="1">Сначала рекомендуемые</option>
                                <option value="2">Сначала дорогие</option>
                                <option value="3">Сначала дешевые</option>
                                <option value="4">Сначала с хорошим рейтингом</option>
                            </select>
                        </div>
                    </div>
                </div>
