                <div class="marketList">
                    {% for master in masters %}
                        <div class="marketList__single">
                            <div class="marketList__single-inner" onclick="document.location.href = '{{ master.link }}'">
                                <div class="marketList__side marketList__side_one">
                                    <div class="marketList__img">
                                        <img src="{{ master.img.src }}" alt="{{ master.name }}"  class="marketList__img-tag">
                                    </div>
                                    <div class="marketList__main">
                                        {% if ((master.reviews_number and master.reviews_number != '') or
                                            (master.raiting and master.raiting != '')) %}
                                            <div class="marketList__numbers">
                                                {% if (master.raiting and master.raiting != '') %}
                                                    {% include './includes/raiting.twig' with {raitNumber: master.raiting} %}
                                                    <div class="marketList__numbers-raitNumber">
                                                        {{ master.raiting }}
                                                    </div>
                                                {% endif %}
                                                {% if (master.reviews_number and master.reviews_number != '') %}
                                                    <div class="marketList__numbers-reviews">
                                                        <a href="?layout=marketplace/detail#master-reviews" class="button2">
                                                            {{ master.reviews_number }} отзывов
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                        <div class="marketList__title">
                                            {{ master.name }}
                                        </div>
                                        {% if (master.position and (master.position is empty) == false) %}
                                            <a href="#" class="marketList__geo">
                                                {% include './includes/icon.twig' with {icon: {name: 'geo', class: ''}} %}
                                                <span>
                                                    {{ master.position.adress }}
                                                </span>
                                            </a>
                                        {% endif %}
                                        {% if (master.preview_text and master.preview_text != '') %}
                                            <div class="marketList__desc">
                                                {{ master.preview_text }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="marketList__side marketList__side_two">
                                    <div class="marketList__info">
                                        {% if (master.service and (master.service is empty) == false) %}
                                            <div class="marketList__servPr">
                                                <div class="marketList__service">
                                                    {{ master.service.title }}
                                                </div>
                                                <div class="marketList__price">
                                                    от {{ master.service.price }} &nbsp;₽
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if (master.last_review and master.last_review != '') %}
                                            <div class="marketList__review">
                                                <div class="marketList__review-title">
                                                    Последний отзыв:
                                                </div>
                                                <div class="marketList__review-text">
                                                    {{ master.last_review }}
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="marketplace__button">
                    <a href="#" class="button js-marketList-more">
                        Показать ещё
                    </a>
                </div>
            </div>
        </div>
    {% endblock %} {#marketplace#}
{% endblock %} {#main#}
